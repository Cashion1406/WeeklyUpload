<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient

                android:angle="360"
                android:endColor="#FAD0C4"
                android:startColor="#F1A7F1"
                android:type="linear">

            </gradient>

        </shape>
    </item>

    <item
        android:bottom="2.5dp"
        android:left="2.5dp"
        android:right="2.5dp"
        android:top="2.5dp">
        <shape android:shape="oval">
            <solid

                android:color="@color/white">

            </solid>
        </shape>
    </item>

</layer-list>